<section class="mv py-5 text-center">
  <div class="row py-lg-5 col-lg-6">
    <div class="card card-lg mx-auto">
      <div class="card-body">
        <p>Potepan Shareでまだ体験したことのない旅をしよう</p>
        <%= form_tag(search_path,:method => 'get') do %>
        <%= text_field_tag :search , "", placeholder: "エリア", class: "form-control" %>
        <%= submit_tag '探す', class: "btn btn-primary w-100 mt-3" %>
        <% end %>
      </div>
    </div>
  </div>
</section>

